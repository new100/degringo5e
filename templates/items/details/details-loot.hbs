<fieldset>
    <legend>{{ localize "DEGRINGO5E.ItemLootDetails" }}</legend>

    {{!-- Loot Type --}}
    {{ formField fields.type.fields.value label="DEGRINGO5E.ItemLootType" value=source.type.value choices=CONFIG.lootTypes
                 labelAttr="label" blank="" localize=true }}

    {{!-- Loot Subtype --}}
    {{#if itemSubtypes}}
    {{ formField fields.type.fields.subtype value=source.type.subtype choices=itemSubtypes blank=""
                 label=(localize "DEGRINGO5E.ItemLootSubtype" category=(lookup (lookup CONFIG.lootTypes source.type.value) "label")) }}
    {{/if}}

    {{!-- Loot Properties --}}
    {{ formField fields.properties options=properties.options label="DEGRINGO5E.ItemLootProperties" localize=true
                 input=inputs.createMultiCheckboxInput stacked=true classes="checkbox-grid" }}

</fieldset>
