<section class="flexcol">
    <div class="note info">
        {{ localize (ifThen isGroup "DEGRINGO5E.REST.Short.Hint.Group" "DEGRINGO5E.REST.Short.Hint.Normal") }}
    </div>

    {{#if fields.length}}
    <fieldset>
        <legend>{{ localize "DEGRINGO5E.REST.Configuration" }}</legend>
        {{> "degringo5e.fieldlist" fields }}
    </fieldset>
    {{/if}}

    {{#if hitPoints.length}}
    <fieldset>
        <legend>{{ localize "DEGRINGO5E.HitPoints" }}</legend>
        {{> "degringo5e.fieldlist" hitPoints }}
    </fieldset>
    {{/if}}

    {{#if hitDice}}
    {{#if hitDice.canRoll}}
    <fieldset>
        <legend>{{ localize "DEGRINGO5E.HitDice" }}</legend>
        <div class="form-fields">
            <select name="denom">
                {{ selectOptions hitDice.options selected=hitDice.denomination }}
            </select>
            <button type="button" class="dice-button" data-action="rollHitDie" data-tooltip
                    aria-label="{{ localize 'DEGRINGO5E.Roll' }}">
                <i class="fa-solid fa-dice-d20" inert></i>
            </button>
        </div>
        {{ formField autoRoll name="autoHD" value=config.autoHD input=inputs.createCheckboxInput rootId=partId }}
    </fieldset>
    {{else}}
    <div class="note warn">
        {{ localize "DEGRINGO5E.REST.HitDice.None" }}
    </div>
    {{/if}}
    {{/if}}

    {{#if request}}
    {{> "systems/degringo5e/templates/actors/rest/rest-request.hbs" }}
    {{/if}}
</section>
