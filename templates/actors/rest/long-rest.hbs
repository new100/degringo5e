<section class="flexcol">
    <div class="note info">
        {{ localize (ifThen isGroup "DEGRINGO5E.REST.Long.Hint.Group" "DEGRINGO5E.REST.Long.Hint.Normal") }}
    </div>

    {{#if fields.length}}
    <fieldset>
        <legend>{{ localize "DEGRINGO5E.REST.Configuration" }}</legend>
        {{> "degringo5e.fieldlist" fields }}
    </fieldset>
    {{/if}}

    {{#if hitPoints.length}}
    <fieldset>
        <legend>{{ localize "DEGRINGO5E.HitPoints" }}</legend>
        {{> "degringo5e.fieldlist" hitPoints }}
    </fieldset>
    {{/if}}

    {{#if request}}
    {{> "systems/degringo5e/templates/actors/rest/rest-request.hbs" }}
    {{/if}}
</section>
