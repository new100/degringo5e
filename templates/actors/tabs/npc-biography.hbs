<section class="tab {{ tab.cssClass }}" data-tab="{{ tab.id }}" data-group="{{ tab.group }}">

    {{#if editingDescription}}
    <prose-mirror name="{{ editingDescription.target }}" value="{{ editingDescription.value }}"
                  document-uuid="{{ actor.uuid }}" compact></prose-mirror>
    {{else}}

    {{!-- Ideals, Bonds, & Flaws --}}
    <div class="top flexrow">

        {{~> "degringo5e.biography-textbox" name="system.details.ideal" value=system.details.ideal label="DEGRINGO5E.Ideals"
            icon="fas fa-seedling" ~}}

        {{~> "degringo5e.biography-textbox" name="system.details.bond" value=system.details.bond label="DEGRINGO5E.Bonds"
            icon="fas fa-link" ~}}

        {{~> "degringo5e.biography-textbox" name="system.details.flaw" value=system.details.flaw label="DEGRINGO5E.Flaws"
            icon="fas fa-heart-crack" ~}}

    </div>

    {{!-- Public Information --}}
    <div class="middle">

        <h3 class="icon">
            <button type="button" class="control-button editor-edit unbutton" data-action="editDescription"
                    data-target="system.details.biography.public"
                    aria-label="{{ localize 'DEGRINGO5E.BiographyPublicEdit' }}">
                <i class="fas fa-feather" inert></i>
            </button>
            <degringo5e-icon src="systems/degringo5e/icons/svg/ink-pot.svg"></degringo5e-icon>
            <span class="roboto-upper">{{ localize "DEGRINGO5E.Public" }}</span>
        </h3>

        <div class="editor">
            <div class="editor-content">{{{ enriched.public }}}</div>
        </div>

    </div>

    {{!-- Details --}}
    <div class="bottom">

        <h3 class="icon">
            <button type="button" class="control-button editor-edit unbutton" data-action="editDescription"
                    data-target="system.details.biography.value" aria-label="{{ localize 'DEGRINGO5E.DetailsEdit' }}">
                <i class="fas fa-feather" inert></i>
            </button>
            <degringo5e-icon src="systems/degringo5e/icons/svg/ink-pot.svg"></degringo5e-icon>
            <span class="roboto-upper">{{ localize "DEGRINGO5E.Details" }}</span>
        </h3>

        <div class="editor">
            <div class="editor-content">{{{ enriched.value }}}</div>
        </div>

    </div>

    {{/if}}

</section>
