{{#if (or @root.editable values.length)}}
<div class="pills-group {{#unless values.length}}empty{{/unless}}">
    <h3 class="icon">
        {{#if icon}}<i class="{{ icon }}"></i>
        {{~else if svg}}<degringo5e-icon src="systems/degringo5e/icons/svg/{{ svg }}.svg"></degringo5e-icon>{{/if}}
        <span class="roboto-upper">{{ localize label }}</span>
        {{#if @root.editable}}
        <button type="button" class="config-button unbutton"
                {{~#if configAction}} data-action="showConfiguration" data-config="{{ configAction }}"
                {{~else}} data-action="showConfiguration" data-trait="{{ key }}"{{/if}}
                data-tooltip="{{ localize 'DEGRINGO5E.TraitConfig' trait=(localize label) }}"
                aria-label="{{ localize 'DEGRINGO5E.TraitConfig' trait=(localize label) }}">
            <i class="fas fa-cog" inert></i>
        </button>
        {{/if}}
    </h3>
    <ul class="pills">
        {{#each values}}
        <li class="pill {{ ../color }} {{ color }}">
            {{#each icons}}
            <i class="{{ icon }}" data-tooltip="{{ label }}" aria-label="{{ label }}"></i>
            {{/each}}
            <span class="label">{{ label }}</span>
            {{#if value}}
            <span class="separator">&vert;</span>
            <span class="value">{{ value }}</span>
            {{/if}}
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}
